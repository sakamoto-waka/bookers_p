  <header>
    <% if flash[:notice] %>
      <p id="notice"><%= flash[:notice] %></p>
    <% end %>
    <h1>Books</h1>
    </header>
    <body>
      <table>
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Body</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td class="book-link"><%= link_to 'Show', book_path(book.id) %></td>
                <td class="book-link"><%= link_to 'Edit', edit_book_path(book.id) %></td>
                <td class="book-link"><%= link_to 'Destroy', book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?' %></td>
            </tr>
            <% end %>
          </tbody>
      </table>
      <div class="container">
        <h2>New book</h2>
        <% if @book.errors.any? %>
          <div id="error-explain">
            <div class="error-heading">
              <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>
            </div>  
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>  
          <% end %>

        <div class="book-create">
          <%= form_with model: Book.new, local: true do |f| %>
            <div class="field">
              <label>
                Title
              </label>
              <div>
                <%= f.text_field :title, class:"book_title" %>
              </div>
            </div>
            <div class="field">
              <label>
                Body
              </label>
              <div>
                <%= f.text_area :body %>
               </div>
            </div>
            <div class='action'>
              <%= f.submit 'Create Book' %>
            </div>
          <% end %>
        </div>
      </div>
    </body>